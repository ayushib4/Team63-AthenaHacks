{
  "name": "Eye Scream",
  "description": "A reminder to rest your eyes during screen time",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "./icons/EyesCream - 16.png",
    "32": "./icons/EyesCream - 32.png",
    "48": "./icons/EyesCream - 48.png",
    "128": "./icons/EyesCream - 128.png"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "options_page": "./options.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "./icons/EyesCream - 32.png"
  },
  "permissions": ["tabs", "https://www.google.com/*"]
}
